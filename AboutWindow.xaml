<Window x:Class="SALG__Application_.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SALG__Application_"
        mc:Ignorable="d"
        Title="About" Height="150" Width="560"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtAbout" TextWrapping="WrapWithOverflow" Margin="10">
            SALG (Security Activity Log Generator) is a free and open-source application used for generating Activity Logs for the Department of Security in the Roblox Site-19 community.
            <LineBreak/><LineBreak/>
            GitHub repository:
        </TextBlock>
        <TextBlock Margin="10,0,0,0" Grid.Row="1">
            <Hyperlink NavigateUri="https://github.com/Tosoks67/SALG-Application-" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/Tosoks67/SALG-Application-</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
