<Window x:Class="SALG__Application_.Format"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SALG__Application_"
        mc:Ignorable="d"
        Title="Format Editor" Height="425" Width="560"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10">
            Cheatsheet:<LineBreak/>
            <LineBreak/>
            $(username) - Username<LineBreak/>
            $(rank) - Rank<LineBreak/>
            $(start_time) - Start Time<LineBreak/>
            $(end_time) - End Time<LineBreak/>
            $(time_on_site) - Total Time on-site<LineBreak/>
            $(total_time) - Total Time<LineBreak/>
            $(quota_done) - Quota Done<LineBreak/>
            $(current_quota) - Current Quota<LineBreak/>
            $(notes) - Notes<LineBreak/>
            <LineBreak/>
            $(q) - Represents a line togglable with the<LineBreak/>
            "Show Quota" option.<LineBreak/>
            Goes at the start of the line.<LineBreak/>
            Example:<LineBreak/>
            $(q)-# Quota: $(quota_done) / $(quota_needed)<LineBreak/>
            <LineBreak/>
            $(n) - Represents a line containing notes.<LineBreak/>
            (If no notes, line is omitted;<LineBreak/>
            Goes at the start of the line)
        </TextBlock>
        <TextBox Grid.Column="1" x:Name="txtFormat" TextWrapping="NoWrap" Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        <Button x:Name="btnSaveButton" Content="Save" Margin="5" Height="30" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="btnSaveButton_Click"/>
    </Grid>
</Window>
